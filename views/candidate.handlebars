<div class="container">
  <div class="page-sub-nav">
    <a href="/candidates"><span class="glyphicon glyphicon-chevron-left"></span></a> Our Candidates / {{data.state}} / {{data.name}}
  </div>

  <div class="page-heading">
    <div>
      <h1>{{data.name}}</h1>
      <div>Running for {{data.office}}</div>
      <span>{{data.state}} {{data.district}}</span>
    </div>

    {{#if data.primary_date}}
      <div>
        <div>Primary Date</div>
        <div>{{data.primary_date}}</div>
      </div>
    {{/if}}
  </div>

  {{#if data.primary_cta}}
    <div class="candidate-action-bar">
      <a href="{{data.primary_cta_link}}" class="btn btn-donate">{{data.primary_cta}}</a>

      {{#if data.secondary_cta}}
        <a href="{{data.secondary_cta_link}}" class="btn btn-primary">{{data.secondary_cta}}</a>
      {{/if}}

      {{#if data.website}}
        <a href="{{data.website}}">Website</a>
      {{/if}}

      <div class="pull-right">
        {{#if data.twitter}}
          <a href="{{data.twitter}}">Twitter</a>
        {{/if}}

        {{#if data.facebook}}
          <a href="{{data.facebook}}">Facebook</a>
        {{/if}}

        {{#if data.instagram}}
          <a href="{{data.instagram}}">Instagram</a>
        {{/if}}

        {{#if data.youtube}}
          <a href="{{data.youtube}}">YouTube</a>
        {{/if}}
      </div>
    </div>
  {{/if}}

  <div class="candidate-content clearfix">
    <div class="col-md-6 col-md-offset-3">
      <p class="candidate-bio">
        {{data.bio}}
      </p>
    </div>
  </div>

  <div class="candidate-sign-up sign-up-form clearfix">
    <div class="col-md-6 col-md-offset-3">
      <form action="/signup" method="POST" enctype="application/x-www-form-urlencoded">
        <h3>Join the fight to get {{data.name}} elected.</h3>

        {{#if error}}
          <div class="alert alert-danger" role="alert">{{error}}</div>
        {{/if}}

        <span class="form-group email">
          <label for="email">Email Address</label>
          <input type="email" name="email" id="email" class="email" placeholder="you@example.com">
        </span>

        <span class="form-group zip">
          <label for="zip">Zip Code</label>
          <input type="text" name="zip" id="zip" class="zip" placeholder="90210">
        </span>

        <span class="form-group submit">
          <button class="btn btn-primary btn-block">Join</button>
        </span>
      </form>
    </div>
  </div>
</div>
