<div class="row">
  <div class="container">
    <div class="page-heading clearfix">
      <h1>Our Candidates</h1>
    </div>

    <div>
      <ul class="candidate-list">
      {{#each data}}
        {{#if this.show}}
          <li class="candidate clearfix {{#if this.featured}}featured{{/if}}">
            <a href="{{#if this.office}}/candidates/{{@key}}{{/if}}">
              <div class="candidate__photo" style="background-image: url('/img/candidates/profile/{{@key}}.jpg')"></div>
              <div class="candidate__content">
                <span class="candidate__name">{{this.name}}</span>
                <span class="candidate__location">{{this.state_initials}} {{this.district}}</span>
                <span class="candidate__office">{{this.office}}</span>
              </div>
            </a>
          </li>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>
