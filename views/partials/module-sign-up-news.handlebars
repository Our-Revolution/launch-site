<section class="module-container clearfix">

  <div class="module-col third">
    <div class="module fill centered white border-right">
      <div class="module__content">
        <div class="sign-up-form small">
          <h2>Join us for the future of our political movement.</h2>

          <form action="/signup" method="POST" enctype="application/x-www-form-urlencoded">
          {{#if error}}
            <div class="alert alert-danger" role="alert">{{error}}</div>
          {{/if}}

            <span class="form-group email">
              <label for="email">Email Address</label>
              <input type="email" name="email" id="email" class="email" placeholder="you@example.com">
            </span>

            <span class="form-group zip">
              <label for="zip">Zip Code</label>
              <input type="text" name="zip" id="zip" class="zip" placeholder="90210">
            </span>

            <span class="form-group submit">
              <button class="btn btn-secondary btn-block">Join the Fight</button>
            </span>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="module-col two-thirds">
    <div class="module fill centered tpp-bg" id="news-module-home">
      <div class="module__content">
        <div class="info">

          <span class="article-type">National TPP Call-In Day</span>
          <h1 class="module__heading">Join our push to stop the disastrous Trans-Pacific Partnership.</h1>

          <a href="/stop-tpp-now" class="btn btn-primary btn-block module__button">Join the Fight</a>
        </div>
      </div>
    </div>
  </div>

</section>
