<div class="row">
  <div class="container">
    <div class="page-heading clearfix">
      <h1>Our Candidates <a href="mailto:political+suggestion@ourrevolution.com?subject=Candidate%20Suggestion" class="btn btn-primary pull-right btn-suggest">Suggest a Candidate <span class="glyphicon glyphicon-chevron-right"></span></a></h1>
    </div>

    <div>
      <ul class="candidate-list">
      {{#each data}}
        <li class="candidate clearfix">
          <a href="{{#if this.office}}/candidates/{{@key}}{{/if}}">
            <div class="candidate__photo" style="background-image: url('/img/candidates/profile/{{@key}}.jpg')"></div>
            <div class="candidate__content">
              <span class="candidate__name">{{this.name}}</span>
              <span class="candidate__location">{{this.state_initials}} {{this.district}}</span>
              <span class="candidate__office">{{this.office}}</span>
            </div>
          </a>
        </li>
      {{/each}}
    </div>
  </div>
</div>

<div class="row">
  <div class="container">
    <a href="mailto:political+suggestion@ourrevolution.com?subject=Candidate%20Suggestion" class="btn btn-secondary btn-block">Suggest a Candidate <span class="glyphicon glyphicon-chevron-right"></span></a>
  </div>

</div>
